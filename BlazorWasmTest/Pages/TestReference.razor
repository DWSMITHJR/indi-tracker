@page "/test-reference"
@using SharedLib

<PageTitle>Test Reference</PageTitle>

<h1>Test Reference to Shared Library</h1>

<p>@message</p>

@code {
    private string message = "Testing reference...";

    protected override void OnInitialized()
    {
        try
        {
            message = TestClass.GetMessage();
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }
}
